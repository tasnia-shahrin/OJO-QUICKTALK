<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RateusActivity"
    android:fitsSystemWindows="true"
    tools:layout_editor_absoluteX="-314dp"
    tools:layout_editor_absoluteY="-6dp"
    tools:openDrawer="start">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/lavender1"
            app:titleTextColor="@color/black"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <TextView
            android:id="@+id/subTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@color/lavender5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg2"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/dev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developed by"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:paddingStart="30dp"
                android:textColor="@color/black"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tasnia Sharin"
                android:drawableStart="@drawable/acc"
                android:drawablePadding="10dp"
                android:paddingStart="60dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="24dp" />
            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Joty Saha"
                android:drawableStart="@drawable/acc"
                android:drawablePadding="10dp"
                android:paddingStart="60dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="24dp" />
            <TextView
                android:id="@+id/name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tasrifa Sarkar"
                android:drawableStart="@drawable/acc"
                android:drawablePadding="10dp"
                android:paddingStart="60dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/edu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:drawableStart="@drawable/educ"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:paddingStart="60dp"
                android:text="CSE, University of Dhaka"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/sug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:text="For any suggestions or queries, contact us:"
                android:paddingStart="30dp"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="joty.saha2021@gmail.com"
                android:textStyle="italic"
                android:drawableStart="@drawable/emaill"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:paddingStart="60dp"
                android:textColor="@color/black"
                android:textSize="22dp" />
            <TextView
                android:id="@+id/email2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tasniashahrin269@gmail.com"
                android:textStyle="italic"
                android:drawableStart="@drawable/emaill"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:paddingStart="60dp"
                android:textColor="@color/black"
                android:textSize="22dp" />


            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:padding="10dp"
                app:lottie_autoPlay="true"
                android:id="@+id/lottie"
                app:lottie_rawRes="@raw/coom"/>

        </LinearLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>